{% extends 'base.html.twig' %}

{% block title %}Unidad
{% endblock %}

{% block body %}
	<div>
		<header>
			{{ include("components/_navbar.html.twig") }}
		</header>
		{{ include("components/_breadcrumb.html.twig", 
			{'navegacion':[
				{
					'name':'Dashbord',
					'route':'app_home'
				},
				{
					'name':'Unidad',
					'route':'app_unidad_index'
				},
				{
					'name':'Mostrar',
					'route':'app_unidad_index'
				},
			]}
		)}}
	</div>
	<div class="container text-center ">
		<table class="table">
			<tbody>
				<tr>
					<th>IdUnidad</th>
					<td>{{ unidad.idUnidad }}</td>
				</tr>
				<tr>
					<th>Codigo</th>
					<td>{{ unidad.codigo }}</td>
				</tr>
				<tr>
					<th>Capacidad</th>
					<td>{{ unidad.capacidad }}</td>
				</tr>
				<tr>
					<th>Estado</th>
					<td>{{ unidad.estado }}</td>
				</tr>
				<tr>
					<th>Placa</th>
					<td>{{ unidad.placa }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="row ">
		<a href="{{ path('app_unidad_index') }}">back to list</a>
		{% if is_granted('ROLE_SUPER_ADMIN') %}
			<a href="{{ path('app_unidad_edit', {'idUnidad': unidad.idUnidad}) }}">edit</a>

			{{ include('unidad/_delete_form.html.twig') }}
		{% endif %}

	</div>


{% endblock %}
